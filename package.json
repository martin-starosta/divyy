{
  "name": "divvy-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for Divvy dividend analysis CLI and web app",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=@repo/web",
    "build:cli": "turbo build --filter=@repo/cli",
    "build:core": "turbo build --filter=@repo/core",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@repo/web",
    "dev:cli": "turbo dev --filter=@repo/cli",
    "dev:core": "turbo dev --filter=@repo/core",
    "dev:all": "turbo dev --parallel",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:web": "turbo test --filter=@repo/web",
    "test:cli": "turbo test --filter=@repo/cli",
    "test:core": "turbo test --filter=@repo/core",
    "type-check": "turbo type-check",
    "type-check:web": "turbo type-check --filter=@repo/web",
    "type-check:cli": "turbo type-check --filter=@repo/cli",
    "type-check:core": "turbo type-check --filter=@repo/core",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:web": "turbo lint --filter=@repo/web",
    "lint:cli": "turbo lint --filter=@repo/cli", 
    "lint:core": "turbo lint --filter=@repo/core",
    "format": "turbo format",
    "clean": "turbo clean",
    "clean:web": "turbo clean --filter=@repo/web",
    "clean:cli": "turbo clean --filter=@repo/cli",
    "clean:core": "turbo clean --filter=@repo/core",
    "clean:all": "turbo clean && rm -rf node_modules/.cache && rm -rf .turbo",
    "reset": "npm run clean:all && rm -rf node_modules && rm -f package-lock.json && npm install",
    "precommit": "turbo lint type-check",
    "ci": "turbo build test lint type-check",
    "divvy": "npm run --workspace=@repo/cli start --",
    "setup": "node scripts/dev-setup.js",
    "check": "node scripts/check-workspace.js",
    "link": "node scripts/link-packages.js"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "npm@10.8.1"
}
