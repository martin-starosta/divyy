{
  "name": "@repo/utils",
  "version": "0.1.0",
  "private": true,
  "description": "Shared utilities for Divvy monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "echo 'No tests configured'",
    "test:watch": "echo 'No tests configured'",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@repo/typescript-config": "file:../typescript-config",
    "@repo/eslint-config": "file:../eslint-config",
    "typescript": "^5",
    "eslint": "^9"
  }
}